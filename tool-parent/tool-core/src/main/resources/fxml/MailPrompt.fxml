<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefWidth="540" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.1" fx:controller="com.speedment.tool.core.internal.controller.MailPromptController">
    
    <children>
        <Label maxWidth="1.7976931348623157E308" styleClass="header-pane" text="WELCOME TO THE COMMUNITY">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
         </padding></Label>
        <Label maxWidth="1.7976931348623157E308" text="Please enter your email address:">
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding></Label>
        
        <TextField fx:id="email" promptText="Email">
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
         <VBox.margin>
            <Insets left="30.0" right="30.0" />
         </VBox.margin>
        </TextField>
        
        <TitledPane expanded="false" maxHeight="1.7976931348623157E308" styleClass="termsContainer" text="Terms and Conditions" VBox.vgrow="ALWAYS">
            <content>
                <TextArea fx:id="terms" editable="false" maxHeight="1.7976931348623157E308" minHeight="100.0" prefWidth="200.0" wrapText="true" />
            </content>
         <VBox.margin>
            <Insets left="30.0" right="30.0" />
         </VBox.margin>
        </TitledPane>
      <HBox>
         <VBox.margin>
            <Insets bottom="15.0" left="30.0" right="30.0" />
         </VBox.margin>
         <children>
            <Region prefHeight="0.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
              
              <Button fx:id="okey" alignment="CENTER" defaultButton="true" disable="true" mnemonicParsing="false" text="Okey, I accept!">
                  <padding>
                      <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                  </padding>
              </Button>
         </children>
      </HBox>
    </children>
</VBox>
